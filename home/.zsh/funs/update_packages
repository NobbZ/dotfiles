# -*- mode: shell-script -*-

if [[ $DEBUG != "" ]]; then set -x; fi

case `distribution` in
    Funtoo|Gentoo)
        local eix-sync=`which eix-sync`

        sudo ${eix-sync}
        ;;
    unknown) echo "Unknown distribution, please report.";;
    *)       echo "Known, but unhandled distribution `distribution`, please report.";;
esac
